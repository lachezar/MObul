<?xml version="1.0" encoding="utf-8"?>
<ScrollView
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:id="@+id/task_scroll"
  android:layout_width="fill_parent"
  android:layout_height="wrap_content"
  android:saveEnabled="true"
  >
  <RelativeLayout
  	android:focusable="true" android:focusableInTouchMode="true"
  	android:layout_width="fill_parent"
  	android:layout_height="wrap_content"
  	android:paddingLeft="8dip"
  	android:paddingRight="8dip"
  	>

  	<TextView
  		android:id="@+id/task_title"
  		android:layout_width="wrap_content"
  		android:layout_height="wrap_content"
  		android:layout_alignParentLeft="true"
  		android:layout_alignParentTop="true"
  		android:textStyle="bold"
  		android:textSize="22sp"
  		>
  	</TextView>
  	<TextView
  		android:id="@+id/task_description"
  		android:layout_width="wrap_content"
  		android:layout_height="wrap_content"
  		android:layout_alignParentLeft="true"
  		android:layout_below="@+id/task_title"
  		android:layout_marginTop="8dip"
  		android:layout_marginBottom="8dip"
  		>
  	</TextView>
  	<TextView
	  	android:id="@+id/task_observations_count"
	  	android:layout_width="fill_parent"
	  	android:layout_height="wrap_content"
	  	android:textStyle="italic"
	  	android:layout_gravity="right"
	  	android:layout_alignParentLeft="true"
  		android:layout_below="@+id/task_description"
	  	android:layout_marginBottom="8dip"
	  	>
	</TextView>
  	<LinearLayout
  		android:id="@+id/task_field_ruler"
	  	android:layout_width="fill_parent"
	  	android:layout_height="3dip"
	  	android:layout_marginLeft="24dip"
	  	android:layout_marginRight="24dip"
	  	android:layout_marginTop="8dip"
	  	android:layout_marginBottom="8dip"
	  	android:background="#FF777777"
	  	android:layout_alignParentLeft="true"
  		android:layout_below="@+id/task_observations_count"
	  	>
	  </LinearLayout>
  	<LinearLayout
  		android:id="@+id/task_fields"
  		android:layout_width="fill_parent"
  		android:layout_height="wrap_content"
  		android:layout_alignParentLeft="true"
  		android:layout_below="@+id/task_field_ruler"
  		android:background="#ff777777"
  		android:orientation="vertical"
  		android:padding="8dip"
  		>
  	</LinearLayout>
  	<Button
  		android:id="@+id/task_save_button"
	  	android:text="@string/save"
	  	android:layout_width="wrap_content"
	  	android:layout_height="wrap_content"
	  	android:layout_centerHorizontal="true"
  		android:layout_below="@+id/task_fields"
  		android:paddingLeft="32dip"
  		android:paddingRight="32dip"
  		android:layout_marginTop="16dip"
	  	>
	 </Button>
  </RelativeLayout>
</ScrollView>
